<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/CommonTextView"
        android:layout_margin="@dimen/margin_little_small"
        android:text="@string/buy_ticket_most_popular"
        android:textColor="@color/color_black_2"
        android:textSize="18dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_header"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <include layout="@layout/layout_common_divider_10" />
</LinearLayout>