<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_balck_1"
        android:padding="@dimen/padding_little_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableRight="@drawable/ic_arrow_down"
            android:gravity="center"
            android:text="@string/hot_showing_address_unset"
            android:textColor="@color/color_text_white"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_movie"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/common_black_border"
                android:text="123"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/color_text_white" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="123"
                android:gravity="center"
                android:background="@drawable/common_black_border_inside"
                android:textColor="@color/color_text_white" />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@drawable/ic_search" />

    </RelativeLayout>

</LinearLayout>