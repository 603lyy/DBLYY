<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_movie"
        android:layout_width="75dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_little_small"
        android:contentDescription="电影图片" />

    <TextView
        android:id="@+id/btn_buy"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/iv_movie"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/margin_little_small"
        android:layout_marginRight="@dimen/margin_little_small"
        android:background="@drawable/common_orange_border_inside"
        android:gravity="center"
        android:text="购票"
        android:textColor="@color/color_text_white" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/CommonTextView"
        android:layout_alignTop="@+id/iv_movie"
        android:layout_marginTop="@dimen/margin_super_small"
        android:layout_toEndOf="@id/iv_movie"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_point"
        style="@style/CommonTextView"
        android:layout_alignTop="@+id/tv_title"
        android:layout_marginLeft="@dimen/margin_little_small"
        android:layout_toEndOf="@id/tv_title"
        android:textColor="@color/color_text_green"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_scr"
        style="@style/CommonTextView"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/margin_super_small"
        android:textColor="@color/color_text_orange" />

    <TextView
        android:id="@+id/tv_want_count"
        style="@style/CommonTextView"
        android:layout_toEndOf="@+id/tv_scr"
        android:layout_alignTop="@id/tv_scr" />

    <TextView
        android:id="@+id/tv_show_time"
        style="@style/CommonTextView"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@id/tv_scr"
        android:layout_marginTop="@dimen/margin_super_small"
        android:layout_toStartOf="@id/btn_buy"
        android:textColor="@color/color_text_subheading"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_movie_number"
        style="@style/CommonTextView"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_show_time"
        android:layout_toStartOf="@id/btn_buy"
        android:textColor="@color/color_text_subheading"
        android:textSize="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@id/tv_movie_number"
        android:layout_toStartOf="@id/btn_buy"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_little_small">

        <TextView
            android:id="@+id/tv_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_orange" />

        <TextView
            android:id="@+id/tv_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_orange" />

        <TextView
            android:id="@+id/tv_label_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_orange" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/iv_movie"
        android:background="@color/divider" />

</RelativeLayout>