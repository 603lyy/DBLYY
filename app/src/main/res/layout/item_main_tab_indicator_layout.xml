<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?selectableItemBackground">

    <Button
        android:id="@+id/tab_btn"
        android:layout_marginTop="@dimen/margin_super_small"
        android:layout_width="@dimen/imageview_default_size"
        android:layout_height="@dimen/imageview_default_size"
        android:layout_gravity="center_horizontal"
        android:clickable="false" />

    <TextView
        android:id="@+id/tab_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/color_secondary_text"
        android:layout_height="@dimen/textview_height_small" />
</FrameLayout>